{
  "name": "p5-environment",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon server",
    "dev": "yarn watch & yarn start",
    "build": "parcel build ./src/sketches/**/*.html -d ./dist --no-source-maps",
    "prebuild": "rm -rf ./dist",
    "watch": "parcel watch ./src/sketches/**/*.html ./src/**/*.css -d ./dist --no-hmr --no-autoinstall",
    "prewatch": "rm -rf ./dist"
  },
  "bin": {
    "art": "./bin/index.js"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.3",
    "inquirer": "^7.1.0",
    "nodemon": "^2.0.3",
    "p5": "^1.0.0",
    "plop": "^2.6.0"
  },
  "devDependencies": {
    "cssnano": "^4.1.10"
  }
}
